{
  "family": "lks-leantime-app",
  "taskRoleArn": "arn:aws:iam::950055801200:role/LabRole",
  "executionRoleArn": "arn:aws:iam::950055801200:role/LabRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",
  "volumes": [
    {
      "name": "public-files",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-03d1a0949671640fa",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "userfiles",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-03d1a0949671640fa",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "plugins",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-03d1a0949671640fa",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      }
    }
  ],

  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "enableFaultInjection": false,

  "containerDefinitions": [
    {
      "name": "leantime",
      "image": "leantime/leantime:latest",
      "cpu": 0,
      "essential": true,
      "volumesFrom": [],
      "systemControls": [],

      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "secrets": [],
      "environment": [
        { "name": "APP_PORT", "value": "8080" },
        { "name": "SITENAME", "value": "LKS Leantime" },
        { "name": "LEANTIME_TIMEZONE", "value": "Asia/Jakarta" },
        { "name": "LEANTIME_DEBUG", "value": "1" },
        { "name": "LEANTIME_DB_HOST", "value": "lks-project-management-cluster.cfnkzpmutmbl.us-east-1.rds.amazonaws.com" },
        { "name": "LEANTIME_DB_USER", "value": "admin" },
        { "name": "LEANTIME_DB_PASSWORD", "value": "awskeren" },
        { "name": "LEANTIME_DB_DATABASE", "value": "mysql" },
        { "name": "LEANTIME_DB_PORT", "value": "3306" }
      ],
      "mountPoints": [
        {
          "sourceVolume": "public-files",
          "containerPath": "/var/www/html/public/userfiles",
          "readOnly": false
        },
        {
          "sourceVolume": "userfiles",
          "containerPath": "/var/www/html/userfiles",
          "readOnly": false
        },
        {
          "sourceVolume": "plugins",
          "containerPath": "/var/www/html/app/Plugins",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lks/leantime-app",
          "awslogs-region": "us-east-1",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}